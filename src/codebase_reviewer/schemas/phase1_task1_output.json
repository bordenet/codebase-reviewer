{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase 1 Task 1 Output Schema",
  "description": "Comprehensive security and quality analysis output",
  "type": "object",
  "required": ["summary"],
  "properties": {
    "summary": {
      "type": "object",
      "required": ["overall_security_risk", "quality_gate_status", "key_findings"],
      "properties": {
        "overall_security_risk": {
          "type": "string",
          "enum": ["Critical", "High", "Medium", "Low"]
        },
        "quality_gate_status": {
          "type": "string",
          "enum": ["Pass", "Fail"]
        },
        "key_findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "category", "severity", "confidence", "description", "remediation_summary"],
            "properties": {
              "id": {
                "type": "string"
              },
              "category": {
                "type": "string",
                "enum": ["security", "quality", "architecture"]
              },
              "owasp_category": {
                "type": ["string", "null"]
              },
              "cwe_id": {
                "type": ["string", "null"]
              },
              "severity": {
                "type": "string",
                "enum": ["Critical", "High", "Medium", "Low", "Info"]
              },
              "confidence": {
                "type": "string",
                "enum": ["High", "Medium", "Low"]
              },
              "description": {
                "type": "string"
              },
              "file_path": {
                "type": ["string", "null"]
              },
              "line_number": {
                "type": ["integer", "null"]
              },
              "remediation_summary": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "architecture": {
      "type": "object"
    },
    "metrics": {
      "type": "object"
    },
    "test_coverage": {
      "oneOf": [
        {
          "type": "string",
          "const": "Not Enough Information"
        },
        {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      ]
    },
    "nested_repos_details": {
      "type": "object"
    }
  }
}
