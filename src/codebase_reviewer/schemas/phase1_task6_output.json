{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase 1 Task 6 Output Schema",
  "description": "Security validation report",
  "type": "object",
  "required": ["security_checks"],
  "properties": {
    "security_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["check_name", "status"],
        "properties": {
          "check_name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["Pass", "Fail", "Warning"]
          },
          "details": {
            "type": ["string", "null"]
          }
        }
      }
    }
  }
}

